        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="WindowCreateServer" Height="325" Width="500">
    <Grid Width="500" Height="325">
        <TextBox x:Name="serverNameText" HorizontalAlignment="Center" Text="Название сервера" TextWrapping="Wrap" VerticalAlignment="Center" Width="400" Height="38" FontSize="20" TextAlignment="Center" TextChanged="TextBox_TextChanged" FontWeight="Normal" GotFocus="TextBox_GotFocus"/>
