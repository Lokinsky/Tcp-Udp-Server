<Page x:Class="WpfApp1.View.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.View"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Login">

    <Grid Opacity="0.995" Background="#FFFFED7A" TouchEnter="Grid_TouchEnter" Width="1000" Height="649">
        <TextBox x:Name="loginText" HorizontalAlignment="Center" Margin="0,242,0,0" Text="Login" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="20"/>
        <TextBox x:Name="passwordText" HorizontalAlignment="Center" Margin="0,268,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="18" TouchEnter="TextBox_TouchEnter"/>
        <Label x:Name="statusLabel"  Content="" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top" Width="176"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Click="Button_Click" Width="176"/>
        <ProgressBar x:Name="pBar" HorizontalAlignment="Center" Height="8" Margin="0,316,0,0" VerticalAlignment="Top" Width="176" Background="{x:Null}"/>
    </Grid>
</Page>
